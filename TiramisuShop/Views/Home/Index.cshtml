@section Scripts {
    <script>
        var swiper = new Swiper(".introSwiper", {
            spaceBetween: 0,
            centeredSlides: true,
            autoplay: {
                delay: 3500,
                disableOnInteraction: false,
            },
            speed: 3000,
            loop: true
        });

        var swiper = new Swiper(".ourGallery", {
            effect: "coverflow",
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: "auto",
            initialSlide: 0,
            loop: true,
            coverflowEffect: {
                rotate: 50,
                stretch: 0,
                depth: 100,
                modifier: 1,
                slideShadows: true,

            },
            pagination: {
                el: ".swiper-pagination",
            },
            autoplay: {
                delay: 2500,
                disableOnInteraction: false,
            },
            speed: 1000
        });


    </script>
}