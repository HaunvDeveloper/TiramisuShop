<section id="content" style="background: #FCF5EF;">
    <div id="intro-picture">
        <div class="swiper mySwiper introSwiper">
            <div class="swiper-wrapper">
                <div class="swiper-slide"><img src="~/assets/images/Home.png" alt=""></div>
                @* <div class="swiper-slide"><img src="~/assets/images/intro2.png" alt=""></div>
                <div class="swiper-slide"><img src="~/assets/images/intro3.png" alt=""></div> *@
            </div>
        </div>
        <h2 class="title-cheese">CHEESE CHEESE</h2>
        <h5 class="subtitle-cheese">Ngọt ngào trong từng miếng bánh</h5>
    </div>
    <div id="intro-title">
        <div class="intro-title-content scroll-animate">
            <div>Localizer["title-intro"] <strong>Localizer["subname-company"]</strong></div>
            <p>Localizer["main-subtitle"]</p>
        </div>
    </div>
    <div class="intro-para">
        <div class="container">
            <div class="para-content scroll-animate">
                <h4>Localizer["name-company"]</h4>

                <i><b>“Always Fresh to You”</b></i>

                <p>Localizer["intro-content-1"]</p>

                <p>Localizer["intro-content-2"]</p>

                <p>
                    Localizer["intro-content-3"]
                </p>
                <p>Localizer["intro-content-4"]</p>
            </div>
            <div class="para-img scroll-animate">
                <img src="~/assets/images/intro-sub.png" alt="">
            </div>
        </div>
    </div>
    <div class="our-products">
        <div class="intro-title-content scroll-animate mb-2">
            <div><strong>Localizer["our-products"]</strong></div>
            <p>Localizer["main-subtitle"]</p>
        </div>
        <div class="container">
            <div class="row">
